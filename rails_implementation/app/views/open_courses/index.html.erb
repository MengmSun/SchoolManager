<p id="notice"><%= notice %></p>

<h1>Open Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Teacher</th>
      <th>Term</th>
      <th>Schedule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @open_courses.each do |open_course| %>
    <tr>
      <td><%= open_course.course_id %></td>
      <td><%= open_course.teacher_id %></td>
      <td><%= open_course.term %></td>
      <td><%= open_course.schedule %></td>
      <td><%= link_to 'Show', open_course %></td>
      <td><%= link_to 'Edit', edit_open_course_path(open_course) %></td>
      <td><%= link_to 'Destroy', open_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Open Course', (@teacher ? new_teacher_open_course_path(@teacher) : new_open_course_path) %>