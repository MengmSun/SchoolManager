<p id="notice"><%= notice %></p>

<h1>Department Changes</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Type</th>
      <th>Happened at</th>
      <th>New clazz code</th>
      <th>Original clazz code</th>
      <th>Youth league status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @department_changes.each do |department_change| %>
    <tr>
      <td><%= department_change.code %></td>
      <td><%= department_change.type %></td>
      <td><%= department_change.happened_at %></td>
      <td><%= department_change.new_clazz_code %></td>
      <td><%= department_change.original_clazz_code %></td>
      <td><%= department_change.youth_league_status %></td>
      <td><%= link_to 'Show', department_change %></td>
      <td><%= link_to 'Edit', edit_department_change_path(department_change) %></td>
      <td><%= link_to 'Destroy', department_change, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department Change', (@student ? new_student_department_change_path(@student) : new_department_change_path) %>