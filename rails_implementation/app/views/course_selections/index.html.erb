<p id="notice"><%= notice %></p>

<h1>Course Selections</h1>

<table>
  <thead>
    <tr>
      <th>Open course</th>
      <th>Score</th>
      <th>Term</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_selections.each do |course_selection| %>
    <tr>
      <td><%= course_selection.open_course_id %></td>
      <td><%= course_selection.score %></td>
      <td><%= course_selection.term %></td>
      <td><%= link_to 'Show', course_selection %></td>
      <td><%= link_to 'Edit', edit_course_selection_path(course_selection) %></td>
      <td><%= link_to 'Destroy', course_selection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course Selection', (@student ? new_student_course_selection_path(@student) : new_course_selection_path) %>