<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Student Id</th>
      <th>Clazz</th>
      <th>Id number</th>
      <th>Id type</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Nationality</th>
      <th>Home address</th>
      <th>Home postcode</th>
      <th>Phone number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
    <tr>
      <td><%= student.student_id %></td>
      <td><%= student.clazz_id %></td>
      <td><%= student.id_number %></td>
      <td><%= student.id_type %></td>
      <td><%= student.name %></td>
      <td><%= student.gender %></td>
      <td><%= student.birthday %></td>
      <td><%= student.nationality %></td>
      <td><%= student.home_address %></td>
      <td><%= student.home_postcode %></td>
      <td><%= student.phone_number %></td>
      <td><%= student.email %></td>
      <td><%= link_to 'Show', student %></td>
      <td><%= link_to 'Edit', edit_student_path(student) %></td>
      <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', (@clazz ? new_clazz_student_path(@clazz) : new_student_path) %>