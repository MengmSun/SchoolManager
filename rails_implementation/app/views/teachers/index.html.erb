<p id="notice"><%= notice %></p>

<h1>Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Work Id</th>
      <th>Department</th>
      <th>Title</th>
      <th>Id number</th>
      <th>Id type</th>
      <th>Name</th>
      <th>Gender</th>
      <th>Birthday</th>
      <th>Nationality</th>
      <th>Home address</th>
      <th>Home postcode</th>
      <th>Phone number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
    <tr>
      <td><%= teacher.work_id %></td>
      <td><%= teacher.department_id %></td>
      <td><%= teacher.title %></td>
      <td><%= teacher.id_number %></td>
      <td><%= teacher.id_type %></td>
      <td><%= teacher.name %></td>
      <td><%= teacher.gender %></td>
      <td><%= teacher.birthday %></td>
      <td><%= teacher.nationality %></td>
      <td><%= teacher.home_address %></td>
      <td><%= teacher.home_postcode %></td>
      <td><%= teacher.phone_number %></td>
      <td><%= teacher.email %></td>
      <td><%= link_to 'Show', teacher %></td>
      <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
      <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', (@department ? new_department_teacher_path(@department) : new_teacher_path) %>